<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/po_store_name"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:text="Tên Cửa Hàng"
            android:fontFamily="@font/comfortaa_variablefont_wght"
            android:textSize="@dimen/_15sdp"
            android:ellipsize="end"
            android:maxLines="1"/>
        <TextView
            android:id="@+id/po_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tình trạng"
            android:fontFamily="@font/comfortaa_variablefont_wght"
            android:textSize="@dimen/_13sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:textColor="@color/blue"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp">

        <ImageView
            android:id="@+id/po_image"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_10sdp">
            <LinearLayout
                android:layout_width="@dimen/_130sdp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/po_food_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:fontFamily="@font/comfortaa_variablefont_wght"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    android:text="Tên món"/>

                <TextView
                    android:id="@+id/po_food_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comfortaa_variablefont_wght"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="Giá"/>


            </LinearLayout>


        </RelativeLayout>
    </LinearLayout>

</LinearLayout>