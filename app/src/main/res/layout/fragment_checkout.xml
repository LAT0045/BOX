<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/btn_back"
                    android:backgroundTint="@color/orange"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thanh Toán"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/comfortaa_variablefont_wght"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_10sdp">
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Thông Tin Đặt Hàng"
                     android:fontFamily="@font/comfortaa_variablefont_wght"
                     android:textStyle="bold"
                     android:textSize="@dimen/_15sdp"
                     android:layout_marginStart="@dimen/_10sdp"/>

                <TextView
                    android:layout_width="@dimen/_135sdp"
                    android:layout_height="wrap_content"
                    android:text="Sửa"
                    android:fontFamily="@font/comfortaa_variablefont_wght"
                    android:textStyle="bold"
                    android:textSize="@dimen/_15sdp"
                    android:gravity="right"
                    android:textColor="@color/blue"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lê Anh Thư"
                android:fontFamily="@font/comfortaa_variablefont_wght"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                android:textColor="@color/dark_gray"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="076981xxxx"
                android:fontFamily="@font/comfortaa_variablefont_wght"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                android:textColor="@color/dark_gray"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="155A Đường Gì Đó, Phường Gì Đó, Quận Gì Đó."
                android:fontFamily="@font/comfortaa_variablefont_wght"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                android:textColor="@color/dark_gray"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Các Món Đã Chọn"
                android:fontFamily="@font/comfortaa_variablefont_wght"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"
                android:textColor="@color/orange"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng Cộng"
                android:fontFamily="@font/comfortaa_variablefont_wght"
                android:textStyle="bold"
                android:textSize="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:gravity="center_horizontal"/>

            <TextView
                android:layout_width="@dimen/_210sdp"
                android:layout_height="wrap_content"
                android:text="500.000Đ"
                android:fontFamily="@font/comfortaa_variablefont_wght"
                android:textStyle="bold"
                android:textSize="@dimen/_23sdp"
                android:gravity="right"
                android:textColor="@color/orange"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="@dimen/_280sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/long_btn"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đặt Hàng"
                android:textColor="@color/white"
                android:fontFamily="@font/comfortaa_variablefont_wght"
                android:textSize="@dimen/_15sdp"
                android:layout_centerInParent="true" />

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>